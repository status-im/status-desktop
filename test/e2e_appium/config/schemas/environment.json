{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["metadata", "provider", "devices"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        }
      }
    },
    "provider": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "options": {
          "type": "object"
        }
      }
    },
    "execution": {
      "type": "object",
      "properties": {
        "concurrency": {
          "type": "object",
          "properties": {
            "max_sessions": { "type": "integer", "minimum": 1 },
            "per_device_limit": { "type": "integer", "minimum": 1 }
          }
        },
        "retry_failed_tests": { "type": "integer", "minimum": 0 },
        "pytest": {
          "type": "object",
          "properties": {
            "addopts": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "device_defaults": {
      "type": "object",
      "properties": {
        "capabilities": { "type": "object" }
      }
    },
    "devices": {
      "type": "object",
      "required": ["matrix"],
      "properties": {
        "default": { "type": "string" },
        "matrix": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "capabilities"],
            "properties": {
              "id": { "type": "string", "minLength": 1 },
              "display_name": { "type": "string" },
              "tags": {
                "type": "array",
                "items": { "type": "string" }
              },
              "capabilities": { "type": "object" },
              "provider_overrides": { "type": "object" }
            }
          }
        }
      }
    },
    "timeouts": {
      "type": "object",
      "properties": {
        "default": { "type": "integer", "minimum": 5 },
        "element_wait": { "type": "integer", "minimum": 5 },
        "element_click": { "type": "integer", "minimum": 1 },
        "element_find": { "type": "integer", "minimum": 1 }
      }
    },
    "logging": { "type": "object" },
    "directories": { "type": "object" }
  }
}
